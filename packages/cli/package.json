{
  "name": "@mcpkit-dev/cli",
  "version": "2.2.0",
  "description": "CLI tool for creating and managing mcpkit MCP servers",
  "type": "module",
  "bin": {
    "mcpkit": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "cli",
    "mcpkit",
    "model-context-protocol"
  ],
  "license": "MIT",
  "homepage": "https://v-checha.github.io/mcpkit",
  "repository": {
    "type": "git",
    "url": "https://github.com/v-checha/mcpkit.git",
    "directory": "packages/cli"
  }
}
